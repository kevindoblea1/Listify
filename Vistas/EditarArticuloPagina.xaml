<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Listify.Vistas.EditarArticuloPagina"
    Title="Editar ArtÃ­culo">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">

            <Label Text="Nombre" />
            <Entry Text="{Binding Articulo.Nombre}" Placeholder="Ej: Leche" />

            <Label Text="Cantidad" />
            <Entry Text="{Binding Articulo.Cantidad}" Keyboard="Numeric" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="10">
                <Button Text="Cancelar" Command="{Binding CancelarCommand}" />
                <Button Text="Guardar" Command="{Binding GuardarCommand}" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
